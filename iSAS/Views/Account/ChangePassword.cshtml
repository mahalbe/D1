@model ISas.Web.Models.LocalPasswordModel


<style>
    .login-box {
        width: 360px;
        margin: 7% 0% 7% 32%;
    }
</style>

<section class="content-header">
    <h1>
        Chage Password
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li>Settings</li>
        <li>Change Password</li>
    </ol>
</section>


<section class="content">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Change Your Password</p>
            @using (Html.BeginForm())
            {
                <div class="form-group has-feedback">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", autocomplete = "off", placeholder = "Old Password" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", autocomplete = "off", placeholder = "New Password" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", autocomplete = "off", placeholder = "Confirm New Password" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <!-- /.col -->
                    <div class="col-xs-6">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Change Password</button>
                    </div>
                    <!-- /.col -->
                </div>
            }
        </div>
        <!-- /.login-box-body -->
    </div>
</section>



